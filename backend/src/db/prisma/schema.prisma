generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int        @id        @default(autoincrement())
  username     String     @unique
  password     String
}

model Customer {
  id          String      @id        @default(uuid())
  name        String
  phNo        String      
  address     String?  
  
  jobs        Job[]

}

model Job {
  id                    String        @id         @default(uuid())
  customer              Customer      @relation(fields: [customer_id], references: [id])
  customer_id           String
  camera_brand          String
  camera_model          String
  serial_number         String
  accessories           String?
  physical_condition    String?
  status                jobStatus
}

enum jobStatus {
  pending
  in_progress
  ready
  delivered
  cancelled
}
